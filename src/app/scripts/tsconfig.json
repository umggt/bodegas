{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "system",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "../wwwroot/app",
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "pretty": true,
    "noEmitHelpers": true
  },
  "compileOnSave": true,
  "buildOnSave": true,
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
